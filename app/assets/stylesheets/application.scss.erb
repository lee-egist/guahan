.letterSelect{
  display: none;
}

 @font-face {
  font-family: 'london';
  font-weight: lighter;
  font-style: normal;
  src: font_url('EnglishTowne.ttf') format('truetype');
}


html{
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
*, *:before, *:after {
  -webkit-box-sizing: inherit;
  -moz-box-sizing: inherit;
  box-sizing: inherit;
}

body{
  margin: 0px;
}

.nav{
  margin: auto;
  text-align: center;
  background-color: rgb(195, 6, 6);
  padding-top: 1em;
  padding-bottom: .25em;
  box-shadow: 0px 2px 2px rgb(0, 0, 0);

}


.nav h1{
  margin-top: 0px;
  font-size: 3em;
  font-family: 'london';

}

.navlinks{
  font-size: 1.5em;
}
.active{
  color: red;
  text-decoration: underline;
}

p{
  font-family: sans-serif;;
}


.main{
  margin: 1em;
  padding-left: 2em;
  padding-right: 2em;
}


.navlinks a{
  color: inherit;
}
.navlinks a:hover{
  color: white;
  text-decoration: underline;
}

@media screen and (max-width: 480px){
  .letters{
    padding-left: 0px;
    display: none;
  }
  .letterSelect{
    display: block;
  }
}
