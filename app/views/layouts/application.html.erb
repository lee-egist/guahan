<!DOCTYPE html>
<html>
<head>
  <title>Guahan</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="main">

  <% if request.path == "/" %>
    <%= render 'home_nav' %>
  <% else %>
    <%= render 'nav' %>
  <% end %>
  <div class="content">
    <%= yield %>
  </div>
  <%= render 'footer' %>
</div>
</body>
</html>
