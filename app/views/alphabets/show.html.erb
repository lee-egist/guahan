<div class="main">


<% row = 1 %>
<% @words.each do |word| %>
  <% if row % 2 != 0 %>
    <div class="gray">
  <% else %>
    <div class="white">
  <% end %>
  <p>

  <strong class="word"><%= link_to word.spelling, word_path(word, page: params[:page]),hreflang: "en", rel: "help"   %></strong>
  </p>
  <% count = 1 %>
  <% word.definitions.order(created_at: 'asc').limit(3).each do |definition| %>
    <p>
      <%= count %>. <%= definition.explaination %>
    </p>
    <% count += 1 %>
  <% end %>
  <% row += 1 %>
</div>
<% end %>
<div class="lower">
<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @words %>
    </div>
    <%= will_paginate @words, :container => false %>
  </div>
</div>
</div>
